<div class="reservation-container">

  <div class="go-back">
    <%= link_to icon('fas', 'chevron-left'), local_boats_path %>
    <%= link_to 'Go back', local_boats_path, class: 'av-link' %>
  </div>

  <div class="reservation-card">
    <h4>Edite o barco</h4>
    <h5><%= @boat.name %></h5>

      <%= simple_form_for(@boat, url: local_boat_path(@boat), method: 'patch') do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name,
                      required: true,
                      autofocus: true,
                      label: "Nome do Barco" %>
          <%= f.input :max_occupation,
                      required: true,
                      autofocus: true,
                      label: "Ocupação máxima" %>
          <%= f.input :photo, as: :file %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Salvar", class: "devise-btn" %>
        </div>
      <% end %>
  </div>
</div>
