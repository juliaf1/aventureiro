
<div class="boats-container">
  <% if @boats.empty? %>
    <p>Você ainda não tem barcos.
      <%= link_to "Adicione um barco", new_local_boat_path, class: "add-new-boat-btn" %></p>
  <% else %>
    <%= link_to "Adicione um barco", new_local_boat_path, class: "add-new-boat-btn" %>
    <% @boats.each do |boat| %>
      <div class="boat-card">
        <div class="boat-card-top">
          <div class="boat-details">
            <h3 class="boat-name"><%= boat.name %></h3>
            <p>Ocupação máxima: <%= boat.max_occupation %></p>
          </div>
          <div class="boat-card-image">
            <img class="boat-image" src="https://imgc.allpostersimages.com/img/print/posters/small-fishing-boats-in-the-turquoise-sea-mauritius-indian-ocean-africa_a-G-8747570-4990619.jpg" alt="boat photo">
        </div>
      </div>

        <%= link_to "Adicione uma viagem", new_local_boat_boat_journey_path(boat), class: "boat-action-btns" %>
        <%= link_to "Remover", local_boat_path(boat), method: :delete, class: "boat-action-btns" %>
      </div>
    <% end %>
  <% end %>
</div>
