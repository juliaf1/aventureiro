<div class="boats-container">
  <% if @boats.empty? %>
    <p>You do not have any boats.
      <%= link_to "Add a new boat", new_local_boat_path, class: "secondary-btn secondary-btn-sm secondary-btn-dark-blue" %></p>

  <% else %>
    <%= link_to "Adicione um barco", new_local_boat_path, class: "secondary-btn secondary-btn-sm secondary-btn-dark-blue" %>

    <% @boats.each do |boat| %>
      <div class="boat-card">
        <div class="boat-card-top">
          <div class="boat-details">
            <h3 class="boat-name"><%= boat.name %></h3>
            <p>Maximum occupation: <%= boat.max_occupation %></p>
          </div>
          <div class="boat-card-image">
            <img class="boat-image" src="https://imgc.allpostersimages.com/img/print/posters/small-fishing-boats-in-the-turquoise-sea-mauritius-indian-ocean-africa_a-G-8747570-4990619.jpg" alt="boat photo">
          </div>
        </div>

        <div class="boat-card-btns">
          <%= link_to "Add a boat journey", new_local_boat_boat_journey_path(boat), class: "secondary-btn secondary-btn-sm secondary-btn-dark-blue" %>
          <%= link_to "Remove", local_boat_path(boat), method: :delete, class: "primary-btn primary-btn-sm primary-btn-blue" %>
          <%= link_to "Edit", edit_local_boat_path(boat), class: "primary-btn primary-btn-sm primary-btn-blue" %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
