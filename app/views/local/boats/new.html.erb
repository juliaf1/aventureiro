<div class="container">
  <h3>Add a new boat</h3>

  <div>
    <%= simple_form_for(@boat, url: local_boats_path, method: 'post') do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "name" }%>
        <%= f.input :max_occupation,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "last name" }%>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Create", class: "btn btn-primary" %>
      </div>
    <% end %>
    <%= link_to 'Back', user_path(current_user), class: 'btn btn-primary' %>
  </div>
</div>
