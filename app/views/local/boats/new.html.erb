<div class="reservation-container">

  <div class="go-back">
    <%= link_to icon('fas', 'chevron-left'), local_boats_path %>
    <%= link_to 'Go back', local_boats_path, class: 'av-link' %>
  </div>

  <div class="reservation-card">
    <h4>Adicione um novo barco</h4>

    <%= simple_form_for(@boat, url: local_boats_path, method: 'post') do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "name" }%>
        <%= f.input :max_occupation,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "last name" }%>
        <%= f.input :photo, as: :file %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Create", class: "devise-btn" %>
      </div>
    <% end %>

  </div>
</div>
