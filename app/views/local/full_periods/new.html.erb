<div class="reservation-container">

  <div class="go-back">
    <%= link_to icon('fas', 'chevron-left'), local_campsites_path %>
    <%= link_to 'Go back', local_campsites_path, class: 'av-link' %>
  </div>

  <div class="reservation-card">
    <h4>Adicione um período indisponível</h4>
    <h5><%= @campsite.name %> está lotado:</h5>

    <%= simple_form_for(@full_period, url: local_campsite_full_periods_path, method: 'post') do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :start_date, as: :string, label: "De", input_html: { id: "start_date", autocomplete: 'off' } %>
          <%= f.input :end_date, as: :string, label: "Até", input_html: { id: "end_date", autocomplete: 'off' } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Salvar", class: "devise-btn" %>
        </div>

    <% end %>
  </div>
</div>
