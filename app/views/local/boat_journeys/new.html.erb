<h1>Add a new boat journey</h1>

<div>
  <%= simple_form_for(@boat_journey, url: local_boat_boat_journeys_path, method: 'post') do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :departure_time,
                  required: true,
                  autofocus: true %>
      <%= f.input :travel_duration,
                  required: true,
                  autofocus: true %>
      <%= f.input :price_person,
                  required: true,
                  autofocus: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Create", class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= link_to 'Back', user_path(current_user), class: 'btn btn-primary' %>

</div>
