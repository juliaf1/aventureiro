<div class="reservation-container">

  <div class="go-back">
    <%= link_to icon('fas', 'chevron-left'), local_boats_path %>
    <%= link_to 'Go back', local_boats_path, class: 'av-link' %>
  </div>

  <div class="reservation-card">
    <h4>Adicione uma viagem</h4>
    <h5><%= @boat.name %></h5>

    <%= simple_form_for(@boat_journey, url: local_boat_boat_journeys_path, method: 'post') do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :departure_time,
                    required: true,
                    as: :string,
                    label: "Horário de saída",
                    input_html: {class: 'journeypicker'} %>
        <%= f.input :travel_duration,
                    required: true,
                    label: "Tempo de viagem",
                    autofocus: true %>
        <%= f.input :price_person,
                    required: true,
                    label: "Preço por pessoa",
                    autofocus: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Salvar", class: "devise-btn" %>
      </div>
    <% end %>

  </div>
</div>
