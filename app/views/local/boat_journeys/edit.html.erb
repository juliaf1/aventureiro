<div class="reservation-container">
  <div class="go-back">
    <%= link_to icon('fas', 'chevron-left'), local_boat_journeys_path %>
    <%= link_to 'Go back', local_boat_journeys_path, class: 'av-link' %>
  </div>

  <div class="reservation-card">
  <h4>Edit a boat journey</h4>

    <%= simple_form_for(@boat_journey, url: local_boat_journey_path(@boat_journey), method: 'patch') do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :departure_time,
                    required: true,
                    as: :string,
                    label: "Dearture time",
                    input_html: {class: 'journeypicker'} %>
        <%= f.input :travel_duration,
                    required: true,
                    label: "Duration",
                    autofocus: true %>
        <%= f.input :price_person,
                    required: true,
                    label: "Price per person",
                    autofocus: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Save", class: "devise-btn" %>
      </div>
    <% end %>

  </div>
</div>
