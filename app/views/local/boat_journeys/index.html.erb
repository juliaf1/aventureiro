<div class="journey-container">
  <h3>Sua programação de barco</h3>
  <% if @boat_journeys.empty? %>
    <p>Você não tem viagens de barco programadas.</p>
  <% else %>
    <% @boat_journeys.each do |boat_journey| %>
      <div class="local-journey-card">
        <ul>
          <li><strong>Nome do barco: </strong><%= boat_journey.boat.name %></li>
          <li><strong>Hora de partida: </strong><%= boat_journey.departure_time.strftime("%d %B %Y, %H:%M") %></li>
          <li><strong>Duração: </strong><%= boat_journey.travel_duration %></li>
          <li><strong>Preço por passageiro: </strong><%= boat_journey.price_person %></li>
        </ul>
        <div class="journey-btns">
          <%= link_to "Edit journey", edit_local_boat_journey_path(boat_journey), class: "secondary-btn secondary-btn-sm secondary-btn-dark-blue" %>
          <%= link_to "Delete", local_boat_journey_path(boat_journey), method: :delete, class: "secondary-btn secondary-btn-sm secondary-btn-pink" %>
        </div>
      </div>
    <% end %>
  <% end %>
  <%= link_to "Add a journey", local_boats_path(current_user), class: "secondary-btn secondary-btn-sm secondary-btn-dark-blue text-center" %>
</div>
