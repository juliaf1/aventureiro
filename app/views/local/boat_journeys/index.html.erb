<div class="container">
  <h3>Sua programação de barco</h3>
  <% if @boat_journeys.empty? %>
    <p>You don't have any planned boat journeys.</p>
  <% else %>
    <% @boat_journeys.each do |boat_journey| %>
      <div>
        <ul>
          <li><strong>Boat name: </strong><%= boat_journey.boat.name %></li>
          <li><strong>Departure time: </strong><%= boat_journey.departure_time.strftime("%d %B %Y, %H:%M") %></li>
          <li><strong>Duration: </strong><%= boat_journey.travel_duration %></li>
          <li><strong>Price per passenger: </strong><%= boat_journey.price_person %></li>
          <%= link_to "Edit", edit_local_boat_journey_path(boat_journey) %>
          <%= link_to "Delete", local_boat_journey_path(boat_journey), method: :delete %>
        </ul>
      </div>
    <% end %>
  <% end %>
  <%= link_to "Add a journey", local_boats_path(current_user) %>
</div>
