<div class="container">
  <h3>Boat Journeys</h3>

  <div class="container">
    <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
      
      <h2>Select a date</h2>

      <%= simple_form_for :search, method: "get" do |f| %>
        <%= f.input :date, as: :string, required: false, label: false, input_html: {class: "datepicker", name: "date", autocomplete: 'off'} %>
        <%= f.button :submit, "Go", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <% unless @date %>
    <a href="#" class="secondary-btn secondary-btn-md secondary-btn-green" id="display-all">See all boat journeys</a>
  <% end %>

  <h3>
    <% if @date %>
      Boat journeys for
      <%= @date.to_date.strftime("%d %B %Y") %>
    <% end %>
  </h3>
  <div class="journey-container">
    <% @boat_journeys.first(10).each do |boat_journey| %>
      <div class="journey-card">
        <img class="journey-image" src="https://imgc.allpostersimages.com/img/print/posters/small-fishing-boats-in-the-turquoise-sea-mauritius-indian-ocean-africa_a-G-8747570-4990619.jpg" alt="boat photo">
        <div class="journey-main-info">
          <%= boat_journey.boat.name %>
          <%= boat_journey.departure_time.strftime("%d %B %Y, %H:%M") %>
        </div>
        <a href="#" class="secondary-btn secondary-btn-sm secondary-btn-yellow" id="see-extra-info">See more info</a>
      </div>
      <div class="journey-extra-info info-hidden">
        <%= boat_journey.boat.user.first_name %>
        <%= boat_journey.price_person %>
        <%= boat_journey.travel_duration %>
        <%= link_to "make a reservation", new_boat_journey_boat_journey_reservation_path(boat_journey) %>
      </div>
    <% end %>

    <% other_journeys = @boat_journeys - @boat_journeys.first(10) %>
    <div class=" hidden">
      <% other_journeys.each do |boat_journey| %>
        <div class="journey-card">
          <img class="journey-image" src="https://imgc.allpostersimages.com/img/print/posters/small-fishing-boats-in-the-turquoise-sea-mauritius-indian-ocean-africa_a-G-8747570-4990619.jpg" alt="boat photo">
            <div class="journey-main-info">
              <h3><%= boat_journey.boat.name %></h3>
              <p><%= boat_journey.departure_time.strftime("%d %B %Y, %H:%M") %></p>
            </div>
          <a href="#" class="secondary-btn secondary-btn-sm secondary-btn-yellow" id="see-extra-info">See more info</a>
          <div class="journey-extra-info hidden">
            <%= boat_journey.boat.user.first_name %>
            <%= boat_journey.price_person %>
            <%= boat_journey.travel_duration %>
          </div>
          <%= link_to "make a reservation", new_boat_journey_boat_journey_reservation_path(boat_journey) %>
        </div>
      <% end %>
    </div>
  </div>

  <% if @date %>
    <%= link_to 'Back', boat_journeys_path, class: 'btn btn-primary' %>
  <% end %>

  <p>Couldn't find a schedule that fits you?
    <%= link_to "Contact a boatdriver directly to make a special journey request", boats_path %></p>
</div>
