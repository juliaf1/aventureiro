<%= render 'shared/index_navbar' %>
<div class="boats-container">
  <% @boats.each do |boat| %>
    <div class="boat-card">
      <div class="boat-card-top">
        <div class="boat-details">
          <h5><%= boat.name %></h5>
          <p>Max Occupation: <%= boat.max_occupation %></p>
          <p>Sailor: <%= boat.user.first_name %></p>
        </div>
        <div class="boat-card-image">
          <img class="boat-image" src="https://imgc.allpostersimages.com/img/print/posters/small-fishing-boats-in-the-turquoise-sea-mauritius-indian-ocean-africa_a-G-8747570-4990619.jpg" alt="boat photo">
        </div>
      </div>

      <p>About the Sailor: <%= boat.user.bio %></p>
      <p>Contact: <%= boat.user.phone_number %></p>
    </div>
  <% end %>
</div>
