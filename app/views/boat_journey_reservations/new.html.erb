<h1>Request a reservation on this Boat Journey</h1>

<div>
  <%= simple_form_for(@bj_reservation, url: boat_journey_boat_journey_reservations_path(@boat_journey), method: 'post') do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :number_passengers,
                  required: true,
                  autofocus: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Create", class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= link_to 'Back', user_path(current_user), class: 'btn btn-primary' %>

</div>
